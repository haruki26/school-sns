{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "vitest.config.ts",
    "prisma.config.ts",
    "src/lib/seed.ts"
  ],
  "exclude": ["node_modules"]
}
